<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/brown"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brown"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Inventory Batch"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvAutoBatchId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="BATCH-XXXX"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvArrivalAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Arrival: Auto-set to now"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Scrollable Body -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Total (auto) -->
                <TextView
                    android:id="@+id/tvTotalAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: 0 pcs"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <!-- Section label -->
                <TextView
                    android:id="@+id/tvSizesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Add sizes (Qty, Length × Width)"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>

                <!-- Container for dynamic rows -->
                <LinearLayout
                    android:id="@+id/sizesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp" />

                <!-- Add row button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddSize"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Add size"
                    android:textAllCaps="false"
                    android:insetTop="8dp"
                    android:insetBottom="8dp"
                    app:strokeColor="@color/brown"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart" />

                <!-- Live preview -->
                <TextView
                    android:id="@+id/tvSizePreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:text="—"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Sticky footer actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textAllCaps="false"
                android:enabled="false"
                app:backgroundTint="@color/brown"
                android:textColor="@android:color/white"
                android:insetTop="10dp"
                android:insetBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
