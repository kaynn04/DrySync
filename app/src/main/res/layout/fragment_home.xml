<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section: Recent Activity -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="#D9D0C6"
            app:strokeWidth="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Activity"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/brown"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snapshot of your racks and batches"
                    android:textSize="12sp"
                    android:textColor="#8A5C4231"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Stats Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins">

                    <!-- Tile: Active Slots -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#1F5C4231"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvActive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/brown"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Slots"
                                android:textSize="13sp"
                                android:textColor="#8A5C4231"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tile: Inactive Slots -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#1F5C4231"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvInactive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/brown"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inactive Slots"
                                android:textSize="13sp"
                                android:textColor="#8A5C4231"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tile: Drying Complete -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#1F5C4231"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvComplete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/brown"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Drying Complete"
                                android:textSize="13sp"
                                android:textColor="#8A5C4231"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tile: Still Drying -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#1F5C4231"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvDrying"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/brown"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Still Drying"
                                android:textSize="13sp"
                                android:textColor="#8A5C4231"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tile: Incoming Batch -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#1F5C4231"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvIncoming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/brown"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Low Stock Batches"
                                android:textSize="13sp"
                                android:textColor="#8A5C4231"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tile: Available Batch -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#1F5C4231"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvAvailable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/brown"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available Batch"
                                android:textSize="13sp"
                                android:textColor="#8A5C4231"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Temperature -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="#D9D0C6"
            app:strokeWidth="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:layout_marginBottom="12dp"/>

                <FrameLayout
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/tempProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="60"
                        android:progress="25"
                        app:indicatorSize="215dp"
                        app:trackThickness="16dp"
                        app:trackColor="#FFEDE3"
                        app:indicatorColor="@color/brown" />


                    <TextView
                        android:id="@+id/temperature_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°C"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="@color/brown"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target: ≤ 35°C"
                    android:textColor="#8A5C4231"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Humidity -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="#D9D0C6"
            app:strokeWidth="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:layout_marginBottom="12dp"/>

                <FrameLayout
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/humidProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="62"
                        app:indicatorSize="215dp"
                        app:trackThickness="16dp"
                        app:trackColor="#FFEDE3"
                        app:indicatorColor="@color/brown" />


                    <TextView
                        android:id="@+id/humidity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="62%"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="@color/brown"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ideal: 45% – 60%"
                    android:textColor="#8A5C4231"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
