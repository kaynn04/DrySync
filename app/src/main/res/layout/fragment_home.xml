<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/middle_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/recent_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:textColor="@color/brown"
                android:layout_marginBottom="16dp"/>

            <!--            Grid of 6 squares-->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:orientation="horizontal"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="40dp"
                android:useDefaultMargins="true">

                <!-- Repeat this block 6 times for each stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Orders"
                        android:textSize="14sp"
                        android:textColor="@color/brown" />
                </LinearLayout>

                <!-- Repeat this block 6 times for each stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed Jobs"
                        android:textSize="14sp"
                        android:textColor="@color/brown" />
                </LinearLayout>

                <!-- Repeat this block 6 times for each stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending Orders"
                        android:textSize="14sp"
                        android:textColor="@color/brown" />
                </LinearLayout>

                <!-- Repeat this block 6 times for each stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P1000"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Revenue"
                        android:textSize="14sp"
                        android:textColor="@color/brown" />
                </LinearLayout>

                <!-- Repeat this block 6 times for each stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Drivers"
                        android:textSize="14sp"
                        android:textColor="@color/brown" />
                </LinearLayout>

                <!-- Repeat this block 6 times for each stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Bookings"
                        android:textSize="14sp"
                        android:textColor="@color/brown" />
                </LinearLayout>
            </GridLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:gravity="left"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:textColor="@color/brown"
                    android:layout_marginBottom="16dp" />

                <!-- Temperature Circle -->
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/circular_background"
                    android:gravity="center"
                    android:layout_below="@id/temp_txt"
                    android:layout_centerHorizontal="true">

                    <!-- Temperature Text -->
                    <TextView
                        android:id="@+id/temperature_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°C"
                        android:textSize="36sp"
                        android:textColor="#5C4231"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/humid_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:gravity="left"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:textColor="@color/brown"
                    android:layout_marginBottom="16dp" />

                <!-- Temperature Circle -->
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/circular_background"
                    android:gravity="center"
                    android:layout_below="@id/humid_txt"
                    android:layout_centerHorizontal="true">

                    <!-- Temperature Text -->
                    <TextView
                        android:id="@+id/humidity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°C"
                        android:textSize="36sp"
                        android:textColor="#5C4231"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>